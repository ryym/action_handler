{
  "name": "action_handler",
  "private": true,
  "description": "Just to use husky",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.rb": [
      "bundle exec rubocop --auto-correct --force-exclusion"
    ]
  },
  "devDependencies": {
    "husky": "^2.4.0",
    "lint-staged": "^8.2.0"
  }
}
